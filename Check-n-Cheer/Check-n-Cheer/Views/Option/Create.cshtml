@model Check_n_Cheer.DTO.CreateOptionDTO

@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>
<h4>Option</h4>
<hr />
<div class="row">
    <div class="col-md-4" id="create_option">
        <form asp-action="Create" ,>
            @Html.HiddenFor(model => model.TaskId)
            @Html.HiddenFor(model => model.TestId)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCorrect" /> @Html.DisplayNameFor(model => model.IsCorrect)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn button_color" />
            </div>
        </form>
    </div>
</div>

